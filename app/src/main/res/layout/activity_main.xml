<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_tr"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trivia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="30dp"
         />
    <TextView
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="REGISTER"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/text_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintTop_toBottomOf="@id/text_reg"
        android:id="@+id/et_user"
        android:background="@drawable/edit"
        android:textSize="24sp"
        android:hint="    Username"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColorHint="@color/white"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/et_email"
        app:layout_constraintTop_toBottomOf="@+id/et_user"
        android:background="@color/green_white"
        android:textSize="24sp"
        android:hint="    Email"
        android:textColorHint="@color/white"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/et_pass"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        android:background="@drawable/botton_edit"
        android:textSize="24sp"
        android:textColorHint="@color/white"
        android:hint="    Password"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        tools:ignore="MissingConstraints" />
    <Button
        android:background="@drawable/button"
        android:layout_marginTop="25dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="NEXT"
        app:layout_constraintEnd_toEndOf="@id/et_pass"
        app:layout_constraintStart_toStartOf="@id/et_pass"
        app:layout_constraintTop_toBottomOf="@id/et_pass"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"

        />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/text_tr"
        app:layout_constraintStart_toStartOf="@id/text_tr"
        app:layout_constraintEnd_toEndOf="@id/text_tr"
        android:src="@drawable/ic_sova"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>